@model BookModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create New Book";
}

<h1>@ViewData["Title"]</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-12">
		<form asp-action="Create" enctype="multipart/form-data"> @*dosyayı almak için*@

			@if (ViewBag.Message is not null)
			{
				<p class="text-danger">@ViewBag.Message</p>
			}

		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="WriterIds" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="WriterIds" class="form-select" asp-items="ViewBag.Writers">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="WriterIds" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="CategoryId" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>
            </div>

			<div class="row mb-3">
				<label asp-for="Image" class="col-2 col-form-label"></label>@*<label for="Image" class="col-2 col-form-label"></label>*@
				<div class="col-5">
					<input type="file" name="uploadedImage" class="form-control" id="Image" />
				</div>
			</div>
            
            
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-dark" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-dark">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>




